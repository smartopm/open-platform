
<div class="container">
  <div class="row justify-content-center align-items-center" style="height:60vh">
    <div class="col-10 col-sm-8 col-md-6 col-lg-5">
      <div class="card">
        <div class="card-body">
          <%= form_tag login_sms_path, class: "" do %>
            <div class="row">
              <div class="form-group d-flex" style='margin:auto; width: 90%'>
                <i class='material-icons' style="display:inline; color: #999; font-size:1.25em; padding:0.6em 1em 0;">phone</i>
                <%= text_field_tag :phone_number, '', type: "text", class: "form-control", placeholder: "Phone Number", style:"" %>
              </div>
            </div>
            <%= submit_tag "Login with your phone number", class: "btn btn-primary active", style: "width: 100%; margin-top: 1.5em; background-color: #69ABA4" %>
          <% end %>
        </div>
      </div>
      <hr style="margin: 1.5em 0 0" />
      <%= link_to "Login with Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary active", style: "margin-top: 1.5em; width: 100%; background-color: #69ABA4" %>
    </div>
  </div>
</div>
