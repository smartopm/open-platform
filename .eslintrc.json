{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "extends": "airbnb"
  },
  "plugins": ["react", "react-hooks"],
  "extends": ["airbnb","eslint:recommended", "plugin:react/recommended", "prettier", "plugin:react-hooks/recommended"],
  "rules": {
    "comma-dangle": 0,
    "react/prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.9"
    }
  }
}
