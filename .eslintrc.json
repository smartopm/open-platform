{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "extends": "standard"
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "comma-dangle" : 0,
    "react/prop-types": 0
  },
  "env": {
    "browser": true,
    "node": true,
    "es6":true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "0.16.7"
    }
  }
}
